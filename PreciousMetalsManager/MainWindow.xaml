<Window x:Class="PreciousMetalsManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PreciousMetalsManager"
        xmlns:models="clr-namespace:PreciousMetalsManager.Models"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <models:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Buttons -->
            <RowDefinition Height="Auto"/>  <!-- Current Market Price of Metals -->
            <RowDefinition Height="Auto"/>  <!-- Filters -->
            <RowDefinition Height="*"/>     <!-- DataGrid -->
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Left" Margin="0,0,0,10">
            <Button Content="Add" Width="80" Click="AddButton_Click" Margin="0,0,5,0"/>
            <Button Content="Edit" Width="80" Click="EditButton_Click" Margin="0,0,5,0"/>
            <Button Content="Delete" Width="80" Click="DeleteButton_Click"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10">
            <ItemsControl ItemsSource="{Binding AllMetalTypes}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="5,0">
                            <Label Content="{Binding}" VerticalAlignment="Center"/>
                            <TextBox Width="80"
                                     Margin="2,0"
                                     Text="{Binding DataContext[{Binding}], RelativeSource={RelativeSource AncestorType=Window}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,10">
            <Label Content="Metal Type:" VerticalAlignment="Center"/>
            <ComboBox x:Name="MetalTypeFilterComboBox"
                      Width="120"
                      Margin="5,0"
                      ItemsSource="{Binding MetalTypeFilterOptions}"
                      SelectedItem="{Binding SelectedMetalTypeFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <Label Content="Form/Variant:" VerticalAlignment="Center"/>
            <TextBox x:Name="FormFilterTextBox"
                     Width="120"
                     Margin="5,0"
                     Text="{Binding FormFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="0,0,0,10">
            <DataGrid x:Name="MainDataGrid"
                      ItemsSource="{Binding FilteredHoldings}"
                      AutoGenerateColumns="False"
                      Grid.Row="2"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      AlternationCount="2">
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="White"/>
                        <Style.Triggers>
                            <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                <Setter Property="Background" Value="#FFF0F0F0"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Metal Type" Binding="{Binding MetalType}" />
                    <DataGridTextColumn Header="Form" Binding="{Binding Form}" />
                    <DataGridTextColumn Header="Purity" Binding="{Binding Purity}" />
                    <DataGridTextColumn Header="Weight" Binding="{Binding Weight}" />
                    <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" />
                    <DataGridTextColumn Header="Purchase Price" Binding="{Binding PurchasePrice}" />
                    <DataGridTextColumn Header="Purchase Date" Binding="{Binding PurchaseDate}" />
                    <DataGridTextColumn Header="Current Value" Binding="{Binding CurrentValue}" />
                    <DataGridTextColumn Header="Total Value" Binding="{Binding TotalValue}" />
                </DataGrid.Columns>
            </DataGrid>

            <TextBlock Grid.Row="2"
                       Text="No holdings match your criteria."
                       Foreground="Gray"
                       FontStyle="Italic"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Visibility="{Binding FilteredHoldings.IsEmpty, Converter={StaticResource BoolToVisibilityConverter}}"/>
        </StackPanel>
    </Grid>

</Window>
