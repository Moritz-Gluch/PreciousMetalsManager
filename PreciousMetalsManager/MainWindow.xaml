<Window x:Class="PreciousMetalsManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PreciousMetalsManager"
        xmlns:models="clr-namespace:PreciousMetalsManager.Models"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="750">

    <Window.Resources>
        <models:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="375*"/>
            <ColumnDefinition Width="202*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Buttons -->
            <RowDefinition Height="Auto"/>  <!-- Current Market Price of Metals -->
            <RowDefinition Height="Auto"/>  <!-- Filters -->
            <RowDefinition Height="*"/>     <!-- DataGrid -->
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Left" Margin="0,0,0,10">
            <Button Content="Add" Width="80" Click="AddButton_Click" Margin="0,0,5,0"/>
            <Button Content="Edit" Width="80" Click="EditButton_Click" Margin="0,0,5,0"/>
            <Button Content="Delete" Width="80" Click="DeleteButton_Click" Margin="0,0,5,0"/>
            <Button Content="Edit Prices" Width="100" Click="EditPricesButton_Click" Margin="0,0,5,0"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10" Grid.ColumnSpan="2">
            <Label Content="Gold:" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding GoldPrice}" Width="80" Margin="2,0" VerticalAlignment="Center"/>
            <Label Content="Silver:" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding SilverPrice}" Width="80" Margin="2,0" VerticalAlignment="Center"/>
            <Label Content="Platinum:" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding PlatinumPrice}" Width="80" Margin="2,0" VerticalAlignment="Center"/>
            <Label Content="Palladium:" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding PalladiumPrice}" Width="80" Margin="2,0" VerticalAlignment="Center"/>
            <Label Content="Bronce:" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding BroncePrice}" Width="80" Margin="2,0" VerticalAlignment="Center"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,10" Grid.ColumnSpan="2">
            <Label Content="Metal Type:" VerticalAlignment="Center"/>
            <ComboBox x:Name="MetalTypeFilterComboBox"
                      Width="120"
                      Margin="5,0"
                      ItemsSource="{Binding MetalTypeFilterOptions}"
                      SelectedItem="{Binding SelectedMetalTypeFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <Label Content="Form/Variant:" VerticalAlignment="Center"/>
            <TextBox x:Name="FormFilterTextBox"
                     Width="120"
                     Margin="5,0"
                     Text="{Binding FormFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <Grid Grid.Row="3" Grid.ColumnSpan="2">
            <DataGrid x:Name="MainDataGrid"
                      ItemsSource="{Binding FilteredHoldings}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      AlternationCount="2">
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="White"/>
                        <Style.Triggers>
                            <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                <Setter Property="Background" Value="#FFF0F0F0"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Metal Type" Binding="{Binding MetalType}" />
                    <DataGridTextColumn Header="Form" Binding="{Binding Form}" />
                    <DataGridTextColumn Header="Purity" Binding="{Binding Purity}" />
                    <DataGridTextColumn Header="Weight" Binding="{Binding Weight}" />
                    <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" />
                    <DataGridTextColumn Header="Purchase Price" Binding="{Binding PurchasePrice}" />
                    <DataGridTextColumn Header="Purchase Date" Binding="{Binding PurchaseDate}" />
                    <DataGridTextColumn Header="Current Value" Binding="{Binding CurrentValue, StringFormat=F2}" />
                    <DataGridTextColumn Header="Total Value" Binding="{Binding TotalValue, StringFormat=F2}" />
                </DataGrid.Columns>
            </DataGrid>

            <TextBlock
                Text="No holdings match your criteria."
                Foreground="Gray"
                FontStyle="Italic"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="{Binding FilteredHoldings.IsEmpty, Converter={StaticResource BoolToVisibilityConverter}}"
                IsHitTestVisible="False"
                FontSize="16"
                Padding="20"/>
        </Grid>
    </Grid>

</Window>
