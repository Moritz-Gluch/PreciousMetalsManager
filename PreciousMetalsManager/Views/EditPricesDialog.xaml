<Window x:Class="PreciousMetalsManager.Views.EditPricesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource EditPricesDialog_Title}" Height="318" Width="350" WindowStartupLocation="CenterOwner">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{DynamicResource EditPricesDialog_HintText}" FontWeight="Bold" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="{DynamicResource Lbl_Gold}" Width="80"/>
                <TextBox Name="GoldPriceTextBox" Width="120"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="{DynamicResource Lbl_Silver}" Width="80"/>
                <TextBox Name="SilverPriceTextBox" Width="120"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="{DynamicResource Lbl_Platinum}" Width="80"/>
                <TextBox Name="PlatinumPriceTextBox" Width="120"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="{DynamicResource Lbl_Palladium}" Width="80"/>
                <TextBox Name="PalladiumPriceTextBox" Width="120"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="{DynamicResource Lbl_Bronce}" Width="80"/>
                <TextBox Name="BroncePriceTextBox" Width="120"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="{DynamicResource EditPricesDialog_Btn_Save}" Width="90" Margin="5" IsDefault="True" Click="SaveButton_Click"/>
            <Button Content="{DynamicResource EditPricesDialog_Btn_Cancel}" Width="90" Margin="5" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
