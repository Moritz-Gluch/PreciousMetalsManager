<Window x:Class="PreciousMetalsManager.Views.AddHoldingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PreciousMetalsManager.Views"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <Label Content="Metal Type"/>
            <ComboBox Name="MetalTypeComboBox" />

            <Label Content="Form / Variant"/>
            <TextBox Name="FormTextBox"/>

            <Label Content="Purity"/>
            <TextBox Name="PurityTextBox"/>

            <Label Content="Weight"/>
            <TextBox Name="WeightTextBox"/>

            <Label Content="Quantity"/>
            <TextBox Name="QuantityTextBox"/>

            <Label Content="Purchase Price"/>
            <TextBox Name="PurchasePriceTextBox"/>

            <Label Content="Purchase Date"/>
            <DatePicker Name="PurchaseDatePicker"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Name="SaveButton" Content="Save" Width="80" Margin="5" Click="SaveButton_Click"/>
            <Button Name="CancelButton" Content="Cancel" Width="80" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
